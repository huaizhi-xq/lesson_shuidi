page {
  background-color: #eeeeee;
}
.box {
  background-color: #ffffff;
  width: 49vw;
  height: 49vh;
  margin: 1px;
  /* border: 1px solid; */
  display: inline-block;
  position: relative;
}

.box_hd {
  width: 100%;
  height: 80%;
}
.box_hd .box_img {
  max-width: 100%;
  max-height: 100%;
  display: block;
  margin: auto;
}
.box_db {
  height: 20%;
  /* position: relative; */
}
.box_bd__title {
  font: 1rem sans-serif;
}
.box_bd__price{
  display: inline-block;
  font: 0.9rem ;
  position:absolute; 
  left:0.1rem; 
  bottom:0.4rem;
}
.box_bd__buy {
  display: inline-block;
  font: 0.8em sans-serif;
  /* margin-right: 10px; */
  position:absolute; 
  color: #cecece;
  right:0.1rem; 
  bottom:0.4rem;
}
