.icon
  font-family 'sell-icon' !important
  font-weight normal
  font-style normal
  line-height 1
body, html
  line-height 1
  font-weight 200
  font-family -apple-system, sans-serif
*
  margin 0
  padding 0

.header
  position relative
  overflow hidden
  color #ffffff
  background-color rgba(7,17,27,0.5)
  .content-wrapper
    position relative
    padding 24px 12px 18px 24px
    // 解决inline-block bug  有间隙
    font-size 0
    .avatar
      display inline-block
      vertical-align top
      // width 50%
      img
        border-radius 2px
    .content
      display inline-block
      // width 50%
      margin-left 15px
      .title
        margin 2px 0 8px 0
        .name
          margin-left 6px
          font-size 16px
          line-height 18px
          font-weight bold
        .brand
          display inline-block
          vertical-align top
          width 30px
          height 18px
          bg-img('brand')
          background-size 30px 18px
          background-repeat no-repeat
      .description
        margin-bottom 10px
        font-size 12px
        line-height 12px
        font-weight bold
      .support
        .icon 
          display inline-block
          width 12px
          height 12px
          vertical-align top
          margin-right 4px
          background-size 12px 12px
          background-repeat no-repeat
          &.decrease:before
            content '\e902'
            font-size 12px;
        .text
          line-height 12px
          font-size 10px
      .support-count
        position absolute
        right 12px
        bottom 14px
        padding 0 8px
        height 24px
        line-height 24px
        border-radius 12px
        background rgba(0, 0, 0, 0.2)
        text-align center
        .count
          font-size 10px
          vertical-align top
        .icon
          margin-left 2px
          line-height 24px
          font-size 10px





        
   
         


